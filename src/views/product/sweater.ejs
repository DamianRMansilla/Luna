<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head")%>

<%- include("../partials/header")%>
<body>
    <main>
        <div class="productList">
            <% for (let i = 0; i < productos.length; i++){ %>
                <% let quantity = productos[i].cantidad_stock1 + productos[i].cantidad_stock2 + productos[i].cantidad_stock3 + productos[i].cantidad_stock4 + productos[i].cantidad_stock5 + productos[i].cantidad_stock6 %>
                <% if((quantity > 0) && (productos[i].idcategoria_producto == 3)){%>
                    <a href="/products/<%= productos[i].id_productos%>" class="productLink">
                        <div class="productItem">
                            <div class="imageContainer">
                                <img src="/img/productsImage/<%= productos[i].imagen %>">
                                <% if(productos[i].nuevoIngreso == "si") {%>
                                <div class="nuevoIngreso">
                                    <p>Nuevo ingreso</p>
                                </div>
                                <% } %>
                                <div class="add-like">
                                    <button><i class="fa-solid fa-heart heart-product"></i></button>
                                </div>
                            </div>
                            <div class="productItemText">
                                <h3><%= productos[i].producto %></h3>
                                <p><%= productos[i].descripcion%></p>
                                <p>$<%= productos[i].precio %></p>
                            </div>
                        </div>
                    </a>
            <% }} %>
        </div>
    </main>

<%- include("../partials/footer")%>

</body>
</html>